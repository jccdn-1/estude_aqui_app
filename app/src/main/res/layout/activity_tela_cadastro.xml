<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TelaCadastroActivity">

    <ImageView
        android:id="@+id/waveTelaCadastro"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/wave" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:gravity="center"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/waveTelaCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_criar_conta" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_body_criar_conta" />

        <EditText
            android:hint="@string/txt_email"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextEmailCadastro"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/editTextSenhaCadastro"
            android:hint="@string/txt_criar_senha"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonCriarConta"
            android:layout_marginTop="16sp"
            android:backgroundTint="#00B0FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_criar_conta" />

        <TextView
            android:id="@+id/textViewLogar"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_login" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>